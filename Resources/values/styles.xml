<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!-- Style used to theme the horizontal lines in the ScrollView. Found an example of how to do this here: https://developer.android.com/guide/topics/ui/themes.html -->
  <style name="horizontal_divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:background">@color/planner_divider</item>
  </style>

  <style name="time_textview">
    <item name="android:layout_width">60dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:height">60dp</item>
  </style>

  <style name="dayofweek_textview">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
  </style>
</resources>